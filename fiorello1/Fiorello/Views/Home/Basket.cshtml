@model List<BasketProductVM>
@{
    ViewData["Title"] = "Basket";
    int count = 0;
}

<main>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="text-danger">@TempData["Warning"]</h3>
                @if (Model.Count != 0)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Image</th>
                                <th scope="col">Title</th>
                                <th scope="col">Price</th>
                                <th scope="col">Count</th>
                                <th scope="col">Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (BasketProductVM product in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>
                                        <img src="~/img/@product.ImageURL" width="200" alt="Alternate Text" />
                                    </td>
                                    <td>@product.Title</td>
                                    <td>@product.Price</td>
                                    <td>@product.Count</td>
                                    <td>
                                        <a asp-controller="Home" asp-action="RemoveBasket" asp-route-id="@product.Id" class="text-danger">Remove</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }
                else
                {
                    <p>Basket is empty.Please <a asp-controller="Product" asp-action="Index">add product</a></p>
                }
            </div>
            
        </div>
    </div>
</main>



