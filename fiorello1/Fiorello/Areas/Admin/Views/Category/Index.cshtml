@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories table</h4>
                <p class="card-description">
                    Add class <code>.table-bordered</code>
                </p>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Category name
                                </th>
                                @*<th>
                                    Description
                                </th>*@
                                <th>
                                  Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category ctg in Model)
                            {
                                <tr>
                                    <td>
                                       @ctg.Name
                                    </td>
                                    @*<td>
                                       @Html.Raw(ctg.Description)
                                    </td>*@
                                    <td>
                                        <a class="btn btn-secondary" asp-action="Detail" asp-route-id="@ctg.Id">Detail</a>
                                        <a class="btn btn-info" asp-action="Update" asp-route-id="@ctg.Id">Update</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@ctg.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


